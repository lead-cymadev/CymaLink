# ============================================================================
# ARCHIVO .env - Variables de entorno para proyecto IoT
# ============================================================================

# ============================================================================
# POSTGRESQL - Base de datos principal para usuarios y lógica de aplicación
# ============================================================================
DB_USER=admin
DB_PASSWORD=admin
DB_NAME=pi_db

# ============================================================================
# PGADMIN - Interfaz web para PostgreSQL
# ============================================================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# ============================================================================
# MONGODB - Base de datos para datos IoT (sensores, conectividad, estados)
# ============================================================================
MONGO_USER=iot_mongo_admin
MONGO_PASSWORD=mongo_secure_password_2024
MONGO_DB=iot_data_db

# ============================================================================
# MONGO EXPRESS - Interfaz web para MongoDB
# ============================================================================
MONGO_EXPRESS_USER=mongo_admin
MONGO_EXPRESS_PASSWORD=mongoexpress_password

# ============================================================================
# SPRING BOOT - Configuraciones para microservicios
# ============================================================================
SPRING_PROFILES_ACTIVE=docker
JWT_SECRET=762bf19a1c0ec0387f15e2fdda88dd462c9b63178835f5960f89e5b99bd228b5

# ============================================================================
# MQTT - Configuraciones para Mosquitto broker
# ============================================================================
MQTT_USERNAME=iot_mqtt_user
MQTT_PASSWORD=mqtt_secure_password
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883

# ============================================================================
# GRAFANA - Para monitoreo (FASE 5)
# ============================================================================
GRAFANA_PASSWORD=grafana_admin_password

# ============================================================================
# APLICACIÓN - URLs y configuraciones generales
# ============================================================================
API_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# TIMEZONE - Configuración de zona horaria
# ============================================================================
TZ=America/Bogota

# ============================================================================
# DEVELOPMENT - Variables para desarrollo (opcional)
# ============================================================================
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# SEGURIDAD - Tokens y keys adicionales
# ============================================================================
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
API_KEY_IOT_DEVICES=iot_devices_api_key_2024

# ============================================================================
# RASPBERRY PI - Configuraciones específicas para dispositivos IoT
# ============================================================================
DEVICE_REGISTRATION_TOKEN=device_reg_token_secure_2024
MESH_NETWORK_KEY=mesh_network_encryption_key